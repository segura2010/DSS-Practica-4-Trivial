<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.segura.alberto.p4_dss_luisalbertoseguradelgado">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name=".QuestionActivity"/>
        <activity android:label="@string/stats_title" android:name=".StatsActivity"/>
        <activity android:label="@string/moregames_title" android:name=".MoreGamesActivity"/>
        <activity android:label="@string/endgame_title" android:name=".GameResultsActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
